<p id="notice"><%= notice %></p>

<h1>Client Contacts</h1>

<table>
  <thead>
    <tr>
      <th>Last name</th>
      <th>First name</th>
      <th>Nick name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @client_contacts.each do |client_contact| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td><%= client_contact.last_name %></td>
        <td><%= client_contact.first_name %></td>
        <td><%= client_contact.nick_name %></td>
        <td><%= client_contact.email %></td>
        <td><%= link_to 'Show', client_contact %></td>
        <td><%= link_to 'Edit', edit_client_contact_path(client_contact) %></td>
        <td><%= link_to 'Destroy', client_contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Client Contact', new_client_contact_path %>
